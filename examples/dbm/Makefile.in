srcdir		= @srcdir@
VPATH		= @srcdir@
SHELL		= @SHELL@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
top_srcdir	= @top_srcdir@
top_builddir	= @top_builddir@
prog_name	= @prog_name@
# for ../common.mk
ficldir		= ${top_srcdir}/ficl
comdir		= ${top_srcdir}/lib
fthdir		= ${top_srcdir}/src
pkglibdir	= @libdir@/${prog_name}

DEFS		= @DEFS@
CC		= @CC@
INSTALL		= @INSTALL@
CFLAGS		= @CFLAGS@
LDFLAGS		= @SO_LDFLAGS@ @LDFLAGS@ -L${top_builddir}/src
SO_DBM_LIB	= @SO_DBM_LIB@
LIBS		= -Wl,-soname,${SO_DBM_LIB} -l${prog_name}
OBJS		= fth-dbm.o

all: Makefile @SO_DBM_LIB@

include ${top_srcdir}/common.mk

${SO_DBM_LIB}: ${OBJS}
	${CC} ${LDFLAGS} -o $@ ${OBJS} ${LIBS}

install: all
	test -z "${SO_DBM_LIB}" || \
	    ${INSTALL} ${SO_DBM_LIB} ${pkglibdir}/${SO_DBM_LIB}

uninstall:
	test -z "${SO_DBM_LIB}" || \
	    ${RM} ${pkglibdir}/${SO_DBM_LIB}

test:
dist: Makefile

